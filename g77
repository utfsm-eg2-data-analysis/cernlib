#!/usr/bin/perl
my(@filtered) = grep(!/\-fugly\-complex/, @ARGV);
if (defined $ENV{'CERN_DEBUG'})
{
	@filtered = grep { $_ !~ m/\-O.*/ } @filtered;
	push(@filtered, "-g");
	push(@filtered, "-O0");
}
my($cmd) = "/usr/bin/gfortran -fallow-invalid-boz -std=legacy @filtered";
#print "$cmd\n";
exit(system($cmd));
